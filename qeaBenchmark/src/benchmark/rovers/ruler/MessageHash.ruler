ruler MessageHash{
  observes send(x:obj,y:obj,m:int), ack(x:obj,y:obj,h:int);

  always Start(){ 
    send(x:obj,y:obj,m:int) -> A(x,y,m);
  }  
  state A(x:obj,y:obj,m:int){
    ack(y,x,h:int), h = -m -> Ok;
  }
  initials Start;
  forbidden A;
}

monitor{
  uses M : MessageHash;
  run M .
}